      <!-- Dropdown Trigger -->
      <li><a class="dropdown-button" href="#!" data-activates="dropdown1"><i class="material-icons right">Vegetable List</i></a></li>
    </ul>
  </div>

</nav>
<% if (typeof alerts !== 'undefined') { %>
  <% for (key in alerts) { %>
    <% alerts[key].forEach(function(thisMsg) { %>
      <div class="alert alert-<%= key %>"><%= thisMsg %></div>
    <% }); %>
  <% } %>
<% } %>

<div class="container">
  <div>Current User: <%= currentUser.name %></div>

  <%- body %>
</div>




