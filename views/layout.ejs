<!DOCTYPE html>
<html>
<head>
	<title>Garden</title>
	<link href='https://fonts.googleapis.com/css?family=Crushed' rel='stylesheet' type='text/css'>
	<link href='https://fonts.googleapis.com/css?family=Antic' rel='stylesheet' type='text/css'>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

	  <!-- Compiled and minified CSS for Materialize -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.5/css/materialize.min.css">
	<!-- Latest compiled and minified CSS & JS bs3-cdn-->
<!-- 	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous"> -->
	<script src="https://code.jquery.com/jquery.js"></script>
<!-- 	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script> -->
	<link rel="stylesheet" type="text/css" href="/style.css">

</head>
<body>
<% if (typeof alerts !== 'undefined') { %>
   <% for (key in alerts) { %>
     <% alerts[key].forEach(function(thisMsg) { %>
       <div class="alert alert-<%= key %>"><%= thisMsg %></div>
     <% }); %>
   <% } %>
<% } %>
<!-- Dropdown Structure -->

<ul id="dropdown1" class="dropdown-content">
  <% plantsList.forEach(function(plant) {%>
    <li><a href="/plants/<%= plant.id %>"><%= plant.name %></a></li>
    <li class="divider"></li>
  <% }); %>
</ul>

<ul id="dropdown2" class="dropdown-content">
  <% months.forEach(function(month) {%>
    <li><a href="/months/<%= month.id %>"><%= month.name %></a></li>
    <li class="divider"></li>
  <% }); %>
</ul>

<div><img src="/images/lettucerows.png" width="100%"></div>

<nav>
  <div class="nav-wrapper">
    <a href="/" class="brand-logo">LETTUCE TURNIP the BEET</a>
    <a href="#" data-activates="mobile-demo" class="button-collapse"><i class="material-icons">menu</i></a>
    <ul class="right hide-on-med-and-down">
    <li><a href="/auth/login">Log in</a></li>
    <li><a href="/auth/signup">Sign Up</a></li>
      <li><a href="#!" class="dropdown-button" data-activates="dropdown2">Planting Calendar</a></li>
      <li><a href="/gallery">Gallery</a></li>
      <!-- Dropdown Trigger -->
      <li><a class="dropdown-button" href="#!" data-activates="dropdown1">Vegetables</a></li>
    </ul>

    <ul class="side-nav" id="mobile-demo">
      <li><a href="/auth/login">Log in</a></li>
      <li><a href="/auth/signup">Sign Up</a></li>
      <li><a href="/months">Calendar</a></li>
      <li><a href="/plants">Vegetables</a></li>

    </ul>

  </div>
</nav>

<% if (currentUser)  { %>
  <div class="row">
    <div class="welcome col s2">Welcome, <%= currentUser.firstName %>!</div>
    <div class="logout col s1 offset-s8"><a href="/auth/logout" class="green lighten-1 waves-effect waves-light btn">Logout</a></div>
  </div>
<% } %>
<%- body %>



  <!-- Compiled and minified JavaScript for Materialize-->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.5/js/materialize.min.js"></script>
  <script src="/js/script.js" type="text/javascript"></script>
</body>
</html>